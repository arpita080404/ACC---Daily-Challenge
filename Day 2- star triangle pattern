#include<iostream>
using namespace std;
// number of spaces = (no. of total rows - row number)
// number of stars = (2*row no. - 1)
int main(){
    int n;
    cout<<"Enter number of rows: "<<endl;
    cin>>n;
//first loop to print no. of rows
    for(int i =1; i<=n; i++){
//second loop to print no. of spaces
        for(int j = 1; j <= (n-i); j++){
                cout<<" ";
            }
//third loop to print no. of stars 
        for(int k = 1; k <= (2*i - 1); k++){
             cout<<"*";
            }
        cout<<endl;
    } 
    return 0;
}
